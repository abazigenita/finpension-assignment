{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": ["lib", "demo", "jest.setup.ts", "**/*.ts", "**/*.tsx"]
}